!!!
%html
  %head
    %title At a happy place
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    %script{ type: 'text/javascript' }
      var switchTo5x=true;
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{:href => "http://fonts.googleapis.com/css?family=Dancing+Script", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Josefin+Slab:700", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags
    = yield(:head)
  %body
    .container-fluid
      .row.main-row
        .col-md-6.col-md-offset-3
          = link_to  root_path do 
            %h1 At a happy place.
        .col-md-3.options-menu
          .btn-group
            %span.small-text{'data-toggle' => 'dropdown', 'type' => 'button', 'aria-expanded' => false}
              Options
              %span.caret
            %ul.dropdown-menu{'role' => 'menu'}
              - if user_signed_in?
                %li
                  = link_to 'My Profile', edit_user_path(current_user)
                %li
                  = link_to 'My Posts', posts_user_path(current_user)
                %li
                  = link_to 'Add Post', new_post_path
                %li
                  = link_to 'About', about_path
                %li
                  = link_to "Sign out", destroy_user_session_path, method: :delete
              - else
                %li
                  = link_to 'Sign In', new_user_session_path
                %li
                  = link_to 'Sign Up', new_user_registration_path
                %li
                  = link_to 'Add Post', new_post_path
                %li
                  = link_to 'About', about_path
      %br
      = yield